<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money Buddy"
        android:id="@+id/home_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Budgeting"
        android:id="@+id/general_budgeting"
        android:layout_below="@+id/home_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:clickable="true"
        android:onClick="GeneralBudgetingButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pocket Money"
        android:id="@+id/pocket_money"
        android:layout_below="@+id/saved_spent"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="PocketMoneyButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings History"
        android:id="@+id/savings_history"
        android:layout_below="@+id/pocket_money"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="SavingsHistoryButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:id="@+id/calendar"
        android:layout_below="@+id/savings_history"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="CalendarButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predicted Savings"
        android:id="@+id/predicted_savings"
        android:layout_below="@+id/calendar"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="PredictedSavingsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish list"
        android:id="@+id/wish_list"
        android:layout_below="@+id/predicted_savings"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="WishlistButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Expenses"
        android:id="@+id/daily_expenses"
        android:layout_below="@+id/wish_list"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="DailyExpensesButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved vs. Spent"
        android:id="@+id/saved_spent"
        android:layout_below="@+id/general_budgeting"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="SavedSpentButton" />
</RelativeLayout>
